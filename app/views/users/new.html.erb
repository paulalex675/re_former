<%= form_with model: @user do |form| %>
  <%= form.label :uername, "Username:" %>
  <%= form.text_field :username, placeholder: "Username" %><br><br>
  <%= form.label :email, "Email address:" %>
  <%= form.text_field :email, placeholder: "Email Address" %><br><br>
  <%= form.label :password, "Password:" %>
  <%= form.password_field :password, placeholder: "Password" %><br><br>
  <%= form.submit "Submit" %>
  <% end %>

